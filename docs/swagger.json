          "userId": {
            "description": "Contact's user id",
            "type": "string",
            "example": "674d0d7200c3ebea96ba8e13"
          },
          "email": {
            "description": "Contact's email",
            "type": "string",
            "example": "john.doe@gmail.com"
          },
          "isFavourite": {
            "description": "Contact is favourite",
            "type": "boolean",
            "example": false,
            "default": false
